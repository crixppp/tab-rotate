{
  "manifest_version": 3,
  "name": "Tab Rotator",
  "version": "1.0",
  "description": "Rotate any webpage 90°, 180°, or 270°, or reset rotation with a bounce. Works perfectly on all websites.",
  "permissions": [
    "scripting",
    "activeTab",
    "contextMenus",
    "storage"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    },
    "default_title": "Tab Rotator"
  }
}
